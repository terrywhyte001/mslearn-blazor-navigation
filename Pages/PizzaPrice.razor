@page "/PizzaPrice"
@page "/PizzaPrice/{maxprice:decimal}"

<div class="main">
    <h1>Pizza by Price Range</h1>
    
    <div class="constraint-section">
        <h2>Decimal Constraint Demo</h2>
        <p>Try these URLs:</p>
        <ul>
            <li><NavLink href="/PizzaPrice/15.00">Visit /PizzaPrice/15.00</NavLink></li>
            <li><NavLink href="/PizzaPrice/20.50">Visit /PizzaPrice/20.50</NavLink></li>
        </ul>
        @if (MaxPrice > 0)
        {
            <p style="background-color: #e1bee7; padding: 10px; border-radius: 4px;">
                <strong>Maximum price: £@MaxPrice</strong> - Showing pizzas within budget
            </p>
        }
        else
        {
            <p style="background-color: #e3f2fd; padding: 10px; border-radius: 4px;">
                <strong>No maximum price set</strong> - Browse all pizzas
            </p>
        }
    </div>

    <div class="info-box" style="margin-top: 20px; padding: 15px; background-color: #fff9c4; border: 2px solid #fbc02d; border-radius: 4px;">
        <h3>About Decimal Constraints:</h3>
        <p>
            The <code>{maxprice:decimal}</code> constraint only accepts decimal numbers like 15.99, 20.50, etc.
        </p>
        <table style="width: 100%; border-collapse: collapse; margin-top: 10px;">
            <tr style="background-color: #fbc02d;">
                <th style="padding: 10px; text-align: left;">URL</th>
                <th style="padding: 10px; text-align: left;">Matches</th>
            </tr>
            <tr style="border-bottom: 1px solid #ddd;">
                <td style="padding: 10px;">/PizzaPrice/15.00</td>
                <td style="padding: 10px;">✓ YES</td>
            </tr>
            <tr style="border-bottom: 1px solid #ddd;">
                <td style="padding: 10px;">/PizzaPrice/20.50</td>
                <td style="padding: 10px;">✓ YES</td>
            </tr>
            <tr>
                <td style="padding: 10px;">/PizzaPrice/expensive</td>
                <td style="padding: 10px;">✗ NO (not a decimal)</td>
            </tr>
        </table>
    </div>
</div>

@code {
    [Parameter]
    public decimal MaxPrice { get; set; }
}
