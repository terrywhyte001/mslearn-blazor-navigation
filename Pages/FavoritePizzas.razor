@page "/FavoritePizzas"
@page "/FavoritePizzas/{*favorites}"

<div class="top-bar">
    <a class="logo" href="">
        <img src="img/logo.svg" />
    </a>

    <NavLink href="" class="nav-tab" Match="NavLinkMatch.All">
        <img src="img/pizza-slice.svg" />
        <div>Get Pizza</div>
    </NavLink>

    <NavLink href="myorders" class="nav-tab">
        <img src="img/bike.svg" />
        <div>My Orders</div>
    </NavLink>
</div>

<div class="main">
    <h1>Your Favorite Pizzas (Catch-All Route)</h1>
    
    <div class="catch-all-demo">
        <h2>Catch-All Route Parameter Demo</h2>
        
        <div class="favorite-list">
            @if (string.IsNullOrEmpty(Favorites))
            {
                <p><em>No favorites specified. Try adding paths after the URL:</em></p>
                <ul>
                    <li><NavLink href="/FavoritePizzas/margherita">/FavoritePizzas/margherita</NavLink></li>
                    <li><NavLink href="/FavoritePizzas/margherita/hawaiian">/FavoritePizzas/margherita/hawaiian</NavLink></li>
                    <li><NavLink href="/FavoritePizzas/pepperoni/formaggio/vegetarian">/FavoritePizzas/pepperoni/formaggio/vegetarian</NavLink></li>
                </ul>
            }
            else
            {
                <p><strong>Your favorite pizzas path:</strong></p>
                <div class="path-display">
                    <code>@Favorites</code>
                </div>

                <h3>Parsed Favorites:</h3>
                <ul class="parsed-list">
                    @foreach (var pizza in Favorites.Split('/'))
                    {
                        <li>
                            <span class="pizza-badge">üçï @(char.ToUpper(pizza[0]) + pizza.Substring(1))</span>
                        </li>
                    }
                </ul>

                <div class="info-message">
                    <p>
                        The catch-all route parameter (*favorites) captured the entire path: 
                        <strong>@Favorites</strong>
                    </p>
                </div>
            }
        </div>

        <div class="explanation-box">
            <h3>How Catch-All Parameters Work:</h3>
            <p>
                A catch-all route parameter captures paths across multiple URI folder boundaries (forward slashes).
            </p>
            <div class="example-table">
                <div class="example-row header">
                    <div class="example-cell">Route Parameter</div>
                    <div class="example-cell">URL</div>
                    <div class="example-cell">Captured Value</div>
                </div>
                <div class="example-row">
                    <div class="example-cell"><code>{{favorite}}</code></div>
                    <div class="example-cell">/favoritepizza/margherita/hawaiian</div>
                    <div class="example-cell">margherita (ignores hawaiian)</div>
                </div>
                <div class="example-row">
                    <div class="example-cell"><code>{{*favorites}}</code></div>
                    <div class="example-cell">/favoritepizzas/margherita/hawaiian</div>
                    <div class="example-cell">margherita/hawaiian</div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
